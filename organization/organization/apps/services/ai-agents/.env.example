# AI Agents Service Configuration

# Service Settings
PORT=8020
LOG_LEVEL=INFO
ENVIRONMENT=development

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Redis Configuration (for shared memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/broxiva
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Vector Store Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=ai_agents

# External Services
FRAUD_DETECTION_SERVICE_URL=http://localhost:8003
PRICING_SERVICE_URL=http://localhost:8006
ANALYTICS_SERVICE_URL=http://localhost:8007

# API Keys for External Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
DEEPL_API_KEY=your_deepl_api_key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_ASYNC_EXECUTION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=300
ENABLE_AGENT_LOGGING=true

# Security
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=true
ALLOWED_ORIGINS=http://localhost:3000,https://broxiva.com

# Workflow Configuration
DEFAULT_EXECUTION_MODE=sequential
MAX_WORKFLOW_DURATION_SECONDS=600
