# Media AI Service Environment Configuration

# Service Configuration
LOG_LEVEL=INFO
PORT=8008
WORKERS=4

# Image Processing Settings
MAX_IMAGE_SIZE_MB=10
ALLOWED_FORMATS=jpg,jpeg,png,webp,gif
IMAGE_QUALITY=85
ENABLE_IMAGE_OPTIMIZATION=true

# Thumbnail Settings
DEFAULT_THUMBNAIL_WIDTH=150
DEFAULT_THUMBNAIL_HEIGHT=150

# Storage Configuration (Future Enhancement)
# STORAGE_BACKEND=local  # local, s3, gcs, azure
# AWS_S3_BUCKET=broxiva-media
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret

# CDN Configuration (Future Enhancement)
# CDN_ENABLED=false
# CDN_URL=https://cdn.broxiva.com

# AI Model Configuration (Future Enhancement)
# MODEL_PATH=/app/models
# ENABLE_GPU=false
# MODEL_VERSION=v1

# Feature Flags
ENABLE_FACE_DETECTION=false
ENABLE_WATERMARKING=false
ENABLE_ADVANCED_ANALYTICS=false

# Security
# API_KEY=your_api_key_here
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
