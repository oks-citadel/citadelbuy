{
  "expo": {
    "name": "Broxiva",
    "slug": "broxiva",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.broxiva.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Broxiva to access your camera for visual search and AR features.",
        "NSMicrophoneUsageDescription": "Allow Broxiva to access your microphone for voice search.",
        "NSPhotoLibraryUsageDescription": "Allow Broxiva to access your photos for visual search."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.broxiva.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Broxiva to access your camera for visual search."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Broxiva to access your photos for visual search."
        }
      ]
    ],
    "scheme": "broxiva",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    },
    "hooks": {
      "postPublish": []
    }
  }
}
