{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA",
    "DATABASE_URL",
    "REDIS_URL",
    "JWT_SECRET",
    "JWT_REFRESH_SECRET",
    "KYC_ENCRYPTION_KEY",
    "CORS_ALLOWED_ORIGINS",
    "FRONTEND_URL",
    "PORT",
    "THROTTLE_TTL",
    "THROTTLE_LIMIT",
    "SEARCH_PROVIDER",
    "EMAIL_HOST",
    "EMAIL_PORT",
    "EMAIL_USER",
    "EMAIL_PASSWORD",
    "EMAIL_FROM",
    "SKIP_PRODUCTION_VALIDATION"
  ],
  "tasks": {
    "prisma:generate": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_WS_URL",
        "NEXT_PUBLIC_APP_NAME",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_CDN_URL",
        "NEXT_PUBLIC_AI_SERVICE_URL",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
        "NEXT_PUBLIC_GITHUB_CLIENT_ID",
        "NEXT_PUBLIC_FACEBOOK_APP_ID",
        "NEXT_PUBLIC_APPLE_CLIENT_ID",
        "NEXT_PUBLIC_GA_TRACKING_ID",
        "NEXT_PUBLIC_FB_PIXEL_ID",
        "NEXT_PUBLIC_TIKTOK_PIXEL_ID",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_ENABLE_AI_FEATURES",
        "NEXT_PUBLIC_ENABLE_AR_TRYON",
        "NEXT_PUBLIC_ENABLE_VOICE_SEARCH",
        "NEXT_PUBLIC_ENABLE_CHATBOT",
        "NEXT_PUBLIC_IMAGE_OPTIMIZATION",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build", "prisma:generate"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build", "prisma:generate"]
    },
    "clean": {
      "cache": false
    }
  }
}
