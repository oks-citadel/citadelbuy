# Inventory AI Service Environment Configuration

# Service Configuration
LOG_LEVEL=INFO
PORT=8007
WORKERS=2

# Database Configuration (Optional)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/inventory_ai
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Redis Configuration (Optional)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# Model Configuration
MODEL_VERSION=v1.0.0
ENABLE_SEASONALITY_DETECTION=true
ENABLE_TREND_ANALYSIS=true

# Forecasting Settings
MAX_FORECAST_DAYS=90
DEFAULT_FORECAST_DAYS=30
DEFAULT_SERVICE_LEVEL=0.95

# Optimization Settings
DEFAULT_LEAD_TIME_DAYS=7
DEFAULT_HOLDING_COST=2.5
DEFAULT_STOCKOUT_COST=50.0

# Feature Flags
ENABLE_ADVANCED_FORECASTING=false
ENABLE_ML_MODELS=false

# Security
# API_KEY=your_api_key_here
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
