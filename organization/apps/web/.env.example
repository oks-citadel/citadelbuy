# ==============================================================================
# Broxiva Web Frontend - Environment Configuration
# ==============================================================================
#
# INSTRUCTIONS:
#   1. Copy this file to .env.local: cp .env.example .env.local
#   2. Replace all CHANGE_ME values with real credentials
#   3. NEVER commit .env.local to version control
#
# ==============================================================================

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Main API URL for backend services
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# AI Service URL for AI-powered features (recommendations, visual search, etc.)
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# WebSocket URL for real-time features (live chat, notifications)
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

NEXT_PUBLIC_APP_NAME=Broxiva
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# CDN URL for serving static assets (optional)
NEXT_PUBLIC_CDN_URL=

# Enable Next.js image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# ==============================================================================
# PAYMENT CONFIGURATION
# ==============================================================================

# Stripe Publishable Key (public - safe to expose)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME

# ==============================================================================
# OAUTH / SOCIAL LOGIN
# ==============================================================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# GitHub OAuth
# Get from: https://github.com/settings/developers
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# Facebook OAuth
# Get from: https://developers.facebook.com/apps/
NEXT_PUBLIC_FACEBOOK_APP_ID=

# Apple Sign In
# Get from: https://developer.apple.com/account/resources/identifiers/list/serviceId
NEXT_PUBLIC_APPLE_CLIENT_ID=

# ==============================================================================
# ANALYTICS & MARKETING
# ==============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=

# TikTok Pixel
NEXT_PUBLIC_TIKTOK_PIXEL_ID=

# ==============================================================================
# MONITORING
# ==============================================================================

# Sentry (Error Tracking)
# Get from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_AR_TRYON=true
NEXT_PUBLIC_ENABLE_VOICE_SEARCH=true
NEXT_PUBLIC_ENABLE_CHATBOT=true

# ==============================================================================
# PUSH NOTIFICATIONS
# ==============================================================================

# VAPID public key for web push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ==============================================================================
# SECURITY CHECKLIST
# ==============================================================================
#
# Before deploying, ensure:
#   [ ] All CHANGE_ME values replaced
#   [ ] .env.local is in .gitignore
#   [ ] No sensitive backend keys exposed (only NEXT_PUBLIC_ vars)
#   [ ] Production URLs configured correctly
#
# ==============================================================================
