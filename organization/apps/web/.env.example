# ==============================================================================
# Broxiva Web Frontend - Environment Configuration
# ==============================================================================
#
# INSTRUCTIONS:
#   1. Copy this file to .env.local: cp .env.example .env.local
#   2. Replace all CHANGE_ME values with real credentials
#   3. NEVER commit .env.local to version control
#
# NAMING CONVENTION:
#   - NEXT_PUBLIC_* variables are exposed to the browser (safe for public values)
#   - Variables WITHOUT NEXT_PUBLIC_ prefix are server-side only
#
# ==============================================================================

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Main API URL for backend services
# Production example: https://api.broxiva.com/api
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# AI Service URL for AI-powered features (recommendations, visual search, etc.)
# Production example: https://ai.broxiva.com
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# WebSocket URL for real-time features (live chat, notifications)
# Production example: wss://api.broxiva.com
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

NEXT_PUBLIC_APP_NAME=Broxiva                # Application display name
NEXT_PUBLIC_APP_URL=http://localhost:3000    # Public frontend URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000   # Base URL for SEO (sitemaps, robots.txt, canonical URLs)
NEXT_PUBLIC_APP_ENV=development              # App environment (used by feature flags alongside NODE_ENV)
NODE_ENV=development                        # Options: development, production, test

# CDN URL for serving static assets (optional, leave empty for default)
NEXT_PUBLIC_CDN_URL=

# Enable Next.js image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Docker build mode (set to 'true' for standalone output)
DOCKER_BUILD=false

# ==============================================================================
# PAYMENT CONFIGURATION
# ==============================================================================

# Stripe Publishable Key (public - safe to expose in browser)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME

# ==============================================================================
# OAUTH / SOCIAL LOGIN (Client IDs only - safe to expose)
# ==============================================================================

# Google OAuth - https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# GitHub OAuth - https://github.com/settings/developers
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# Facebook OAuth - https://developers.facebook.com/apps/
NEXT_PUBLIC_FACEBOOK_APP_ID=

# Apple Sign In - https://developer.apple.com/account/resources/identifiers/list/serviceId
NEXT_PUBLIC_APPLE_CLIENT_ID=
NEXT_PUBLIC_APPLE_REDIRECT_URI=             # Apple Sign In redirect URI (e.g., https://broxiva.com/auth/apple/callback)

# ==============================================================================
# ANALYTICS & MARKETING PIXELS
# ==============================================================================

# Google Analytics - https://analytics.google.com/
NEXT_PUBLIC_GA_TRACKING_ID=                 # GA4 tracking ID (G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=              # GA4 measurement ID (same as tracking ID for GA4)

# Google Tag Manager - https://tagmanager.google.com/
NEXT_PUBLIC_GTM_ID=                         # GTM container ID (GTM-XXXXXXX)

# Facebook/Meta Pixel - https://business.facebook.com/
NEXT_PUBLIC_FB_PIXEL_ID=

# TikTok Pixel - https://ads.tiktok.com/
NEXT_PUBLIC_TIKTOK_PIXEL_ID=

# Twitter/X Pixel
NEXT_PUBLIC_TWITTER_PIXEL_ID=

# LinkedIn Insight Tag - https://business.linkedin.com/
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=

# Pinterest Tag - https://ads.pinterest.com/
NEXT_PUBLIC_PINTEREST_TAG_ID=

# Hotjar - https://www.hotjar.com/
NEXT_PUBLIC_HOTJAR_SITE_ID=

# ==============================================================================
# MONITORING & ERROR TRACKING
# ==============================================================================

# Sentry - https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=                     # Sentry DSN (public - safe for browser)

# Sentry Source Maps Upload (server-side only - DO NOT prefix with NEXT_PUBLIC_)
SENTRY_AUTH_TOKEN=                          # Sentry auth token for source map upload
SENTRY_ORG=                                 # Sentry organization slug
SENTRY_PROJECT=                             # Sentry project slug

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

NEXT_PUBLIC_ENABLE_AI_FEATURES=true         # Enable AI-powered features
NEXT_PUBLIC_ENABLE_AR_TRYON=true            # Enable AR virtual try-on
NEXT_PUBLIC_ENABLE_VOICE_SEARCH=true        # Enable voice search
NEXT_PUBLIC_ENABLE_CHATBOT=true             # Enable AI chatbot
NEXT_PUBLIC_FEATURE_VIRTUAL_TRYON=true      # Virtual try-on feature flag

# ==============================================================================
# PUSH NOTIFICATIONS
# ==============================================================================

# VAPID public key for Web Push notifications
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ==============================================================================
# BUILD & DEPLOY METADATA (set by CI/CD, no need to configure locally)
# ==============================================================================

# APP_VERSION=                              # Application version (auto-set from package.json)
# GIT_SHA=                                  # Git commit SHA (auto-set by CI/CD)
# BUILD_DATE=                               # Build timestamp (auto-set by CI/CD)
# IMAGE_TAG=                                # Docker image tag (auto-set by CI/CD)
# VERCEL_GIT_COMMIT_SHA=                    # Vercel auto-sets this

# ==============================================================================
# BUNDLE ANALYSIS (development only)
# ==============================================================================

ANALYZE=false                               # Set to true to enable webpack bundle analyzer

# ==============================================================================
# TESTING (Playwright / E2E)
# ==============================================================================

# PLAYWRIGHT_BASE_URL=http://localhost:3000  # Base URL for Playwright tests
# PLAYWRIGHT_API_URL=http://localhost:4000   # API URL for test helpers
# BASE_URL=http://localhost:3000             # Link checker base URL

# ==============================================================================
# SECURITY CHECKLIST
# ==============================================================================
#
# Before deploying, ensure:
#   [ ] All CHANGE_ME values replaced with real credentials
#   [ ] .env.local is in .gitignore
#   [ ] No sensitive backend keys exposed (only NEXT_PUBLIC_* vars in browser code)
#   [ ] Production URLs configured correctly (HTTPS only)
#   [ ] Sentry DSN configured for error tracking
#   [ ] Analytics IDs configured for production tracking
#
# ==============================================================================
