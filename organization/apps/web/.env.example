# CitadelBuy Web Frontend - Environment Configuration

# API Configuration
# Main API URL for backend services
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# AI Service URL for AI-powered features (recommendations, visual search, etc.)
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# WebSocket URL for real-time features (live chat, notifications)
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Application
NEXT_PUBLIC_APP_NAME=CitadelBuy
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_FB_PIXEL_ID=
NEXT_PUBLIC_TIKTOK_PIXEL_ID=

# Payment
# Get your Stripe publishable key from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# OAuth (for social login)
# Google: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# GitHub: https://github.com/settings/developers
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# Facebook: https://developers.facebook.com/apps/
NEXT_PUBLIC_FACEBOOK_APP_ID=

# Apple: https://developer.apple.com/account/resources/identifiers/list/serviceId
NEXT_PUBLIC_APPLE_CLIENT_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_AR_TRYON=true
NEXT_PUBLIC_ENABLE_VOICE_SEARCH=true
NEXT_PUBLIC_ENABLE_CHATBOT=true

# CDN / Media
# Optional CDN URL for serving static assets
NEXT_PUBLIC_CDN_URL=

# Enable Next.js image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Sentry (Error Tracking)
# Get your Sentry DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=

# Push Notifications
# VAPID public key for web push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# Environment
NODE_ENV=development
