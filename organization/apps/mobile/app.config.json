{
  "expo": {
    "name": "Broxiva",
    "slug": "broxiva",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.broxiva.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Broxiva to access your camera for visual search and AR features.",
        "NSMicrophoneUsageDescription": "Allow Broxiva to access your microphone for voice search.",
        "NSPhotoLibraryUsageDescription": "Allow Broxiva to access your photos for visual search.",
        "NSUserNotificationsUsageDescription": "Allow Broxiva to send you notifications about orders, deals, and personalized recommendations."
      },
      "associatedDomains": [
        "applinks:broxiva.com",
        "applinks:www.broxiva.com"
      ],
      "usesAppleSignIn": false,
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.developer.associated-domains": [
          "applinks:broxiva.com",
          "applinks:www.broxiva.com"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.broxiva.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "broxiva.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "www.broxiva.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Broxiva to access your camera for visual search."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Broxiva to access your photos for visual search."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1",
          "sounds": [
            "./assets/notification-sound.wav"
          ],
          "mode": "production"
        }
      ]
    ],
    "scheme": "broxiva",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "${EAS_PROJECT_ID}"
      },
      "apiUrl": "${API_URL}",
      "environment": "${APP_ENVIRONMENT}"
    },
    "hooks": {
      "postPublish": []
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/${EAS_PROJECT_ID}"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366f1",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    }
  }
}
