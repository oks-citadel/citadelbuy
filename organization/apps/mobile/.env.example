# ==============================================================================
# Broxiva Mobile App - Environment Configuration
# ==============================================================================
#
# INSTRUCTIONS:
#   1. Copy this file to .env: cp .env.example .env
#   2. Replace all placeholder values with real credentials
#   3. NEVER commit .env files to version control
#
# ==============================================================================

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Development API URL
EXPO_PUBLIC_API_URL=http://localhost:4000/api

# Production API URL (uncomment for production builds)
# EXPO_PUBLIC_API_URL=https://api.broxiva.com/api

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

EXPO_PUBLIC_APP_NAME=Broxiva
EXPO_PUBLIC_ENVIRONMENT=development

# ==============================================================================
# PAYMENT CONFIGURATION
# ==============================================================================

# Stripe Publishable Key (public - safe to expose)
# Get from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME

# ==============================================================================
# OAUTH / SOCIAL LOGIN
# ==============================================================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_CLIENT_ID=

# Facebook OAuth
# Get from: https://developers.facebook.com/apps/
EXPO_PUBLIC_FACEBOOK_APP_ID=

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================

# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
EXPO_PUBLIC_SENTRY_DSN=

# Google Analytics / Firebase Analytics
EXPO_PUBLIC_GA_TRACKING_ID=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_AR_TRYON=true
EXPO_PUBLIC_ENABLE_VOICE_SEARCH=true
EXPO_PUBLIC_ENABLE_CHATBOT=true

# ==============================================================================
# SECURITY CHECKLIST
# ==============================================================================
#
# Before deploying, ensure:
#   [ ] All placeholder values replaced
#   [ ] .env file is in .gitignore
#   [ ] Production URLs configured for release builds
#   [ ] No sensitive backend keys exposed
#
# ==============================================================================
