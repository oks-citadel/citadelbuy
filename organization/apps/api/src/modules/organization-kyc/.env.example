# KYC Module Configuration

# KYC Provider Selection
# Options: onfido, jumio, sumsub, mock
KYC_PROVIDER=mock

# Onfido Configuration
ONFIDO_API_TOKEN=your_onfido_api_token_here
ONFIDO_WEBHOOK_TOKEN=your_onfido_webhook_token_here
ONFIDO_REGION=us  # Options: us, eu, ca

# Jumio Configuration (if using Jumio)
JUMIO_API_TOKEN=your_jumio_api_token_here
JUMIO_API_SECRET=your_jumio_api_secret_here
JUMIO_WEBHOOK_SECRET=your_jumio_webhook_secret_here

# Sumsub Configuration (if using Sumsub)
SUMSUB_APP_TOKEN=your_sumsub_app_token_here
SUMSUB_SECRET_KEY=your_sumsub_secret_key_here
SUMSUB_WEBHOOK_SECRET=your_sumsub_webhook_secret_here

# KYC Encryption Key (32-byte hex string)
# Generate with: openssl rand -hex 32
KYC_ENCRYPTION_KEY=your_256_bit_encryption_key_in_hex_format

# Document Storage Configuration
STORAGE_PROVIDER=LOCAL  # Options: S3, AZURE, LOCAL
STORAGE_BUCKET=kyc-documents

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure Blob Storage Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=kyc-documents

# Application URL (for generating URLs)
APP_URL=http://localhost:3000

# ==================== KYC VERIFICATION PROCESSOR ====================
KYC_OCR_PROVIDER=mock
KYC_FACE_PROVIDER=mock
KYC_COMPLIANCE_PROVIDER=mock
KYC_VERIFICATION_LEVEL=standard
KYC_AUTO_APPROVE_THRESHOLD=0.85
KYC_MANUAL_REVIEW_THRESHOLD=0.65
KYC_ENABLE_COMPLIANCE_SCREENING=true
KYC_ENABLE_FACE_VERIFICATION=true

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Azure Cognitive Services
AZURE_COMPUTER_VISION_KEY=your_key
AZURE_COMPUTER_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com
AZURE_FACE_KEY=your_key
AZURE_FACE_ENDPOINT=https://your-region.api.cognitive.microsoft.com

# Face++
FACEPP_API_KEY=your_key
FACEPP_API_SECRET=your_secret

# Compliance Providers
COMPLYADVANTAGE_API_KEY=your_key
REFINITIV_API_KEY=your_key
REFINITIV_API_SECRET=your_secret
DOWJONES_API_KEY=your_key
DOWJONES_API_SECRET=your_secret
LEXISNEXIS_API_KEY=your_key
LEXISNEXIS_CUSTOMER_ID=your_id
