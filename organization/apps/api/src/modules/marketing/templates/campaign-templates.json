        {
          "step": 4,
          "name": "Final Call",
          "delay": "28 days",
          "channel": "email",
          "template": "final-call",
          "subject": "Final Hours: Q4 Sourcing Event Ends Tonight",
          "content": {
            "urgency": "Event ends at 11:59 PM EST",
            "extendedOffer": "Place order today, pay in 60 days with BNPL",
            "cta": "Last Chance - Order Now"
          }
        }
      ],
      "linkedinAds": {
        "budget": "$30000",
        "targeting": {
          "jobTitles": ["VP of Procurement", "Sourcing Director", "Procurement Manager"],
          "industries": ["Retail", "Manufacturing", "Distribution"],
          "companySize": ["51-200", "201-500", "501-1000", "1001-5000", "5001+"]
        },
        "creatives": [
          {
            "format": "sponsored-content",
            "headline": "Use Your 2026 Budget - Source from Africa Today",
            "copy": "Don't let year-end budgets go to waste. Connect with verified African suppliers and save 20-30% on sourcing costs.",
            "cta": "Browse Suppliers",
            "image": "campaign-creative-q4-2026.jpg"
          }
        ]
      }
    }
  ],
