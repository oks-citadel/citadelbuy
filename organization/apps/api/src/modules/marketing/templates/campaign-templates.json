          "content": {
            "offer": "Waived platform fees on orders >$10K",
            "deadline": "December 15, 2026",
            "cta": "Browse Suppliers"
          }
        },
        {
          "step": 2,
          "name": "Supplier Spotlight Email",
          "delay": "7 days",
          "channel": "email",
          "template": "supplier-spotlight",
          "subject": "Featured African Suppliers for Q4 Procurement",
          "content": {
            "featuredSuppliers": 10,
            "categories": ["Textiles", "Food & Beverage", "Manufacturing Components"],
            "cta": "View All Featured Suppliers"
          }
        },
        {
          "step": 3,
          "name": "Urgency Email",
          "delay": "21 days",
          "channel": "email",
          "template": "urgency-promotion",
          "subject": "Only 10 Days Left to Use Your 2026 Budget",
          "content": {
            "countdown": true,
            "fastShipping": "Rush shipping available",
