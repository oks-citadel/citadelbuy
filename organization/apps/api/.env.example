# ==============================================================================
# Broxiva Backend API - Environment Configuration
# ==============================================================================
#
# SECURITY NOTICE: This is a template file. DO NOT commit actual secrets!
# Copy this file to .env and replace all placeholder values with real credentials.
#
# How to generate secrets:
#   JWT secrets:      openssl rand -base64 64
#   Encryption keys:  openssl rand -hex 32
#   DB passwords:     openssl rand -base64 32
#
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================

NODE_ENV=development                        # Options: development, production, test
PORT=4000                                   # API server port
API_PREFIX=/api                             # API route prefix
APP_NAME=Broxiva                            # Application name used in emails, BNPL, etc.
APP_URL=http://localhost:4000               # Public-facing API URL (used for callbacks, webhooks, storage URLs)
API_URL=http://localhost:4000               # API base URL (for email tracking pixels, webhook callbacks)
API_VERSION=v1                              # API version for security headers
LOG_LEVEL=debug                             # Options: debug, info, warn, error

# Frontend URL (for CORS, email links, password resets, redirects)
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
#
# Comma-separated list of allowed origins for Cross-Origin Resource Sharing
#
# PRODUCTION EXAMPLE:
#   CORS_ALLOWED_ORIGINS=https://broxiva.com,https://www.broxiva.com,https://app.broxiva.com
#
# Note: Vercel preview deployments (broxiva-*.vercel.app) are auto-allowed via regex.
#
# SECURITY NOTES:
#   - In production, all origins MUST use HTTPS
#   - Do NOT use wildcard (*) - always specify exact origins
#   - CORS_ORIGIN is deprecated but still supported for backward compatibility
#
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# ==============================================================================
# DATABASE (PostgreSQL + Prisma)
# ==============================================================================
#
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# SECURITY: Generate strong passwords with: openssl rand -base64 32
#
DATABASE_URL="postgresql://broxiva:your-secure-db-password-here@localhost:5432/broxiva_dev?schema=public"

# ==============================================================================
# REDIS (Caching, Sessions, Queues)
# ==============================================================================

# Option A: Full Redis URL (takes priority)
REDIS_URL=redis://localhost:6379

# Option B: Individual Redis connection settings (used by modules like Cart, Webhooks, Queue)
REDIS_HOST=localhost                        # Redis hostname
REDIS_PORT=6379                             # Redis port
REDIS_PASSWORD=                             # Redis password (leave empty for no auth)
REDIS_DB=0                                  # Redis database number (0-15)
REDIS_QUEUE_DB=1                            # Separate Redis DB for BullMQ queues

# Queue configuration
QUEUE_PREFIX=broxiva:queue                  # Prefix for all queue keys in Redis

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================
#
# CRITICAL: Generate secure random secrets before deploying!
#   openssl rand -base64 64
#
# Requirements:
#   - JWT_SECRET: Minimum 64 characters (base64 encoded)
#   - JWT_REFRESH_SECRET: Minimum 64 characters, MUST differ from JWT_SECRET
#
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_64_minimum_64_characters
JWT_EXPIRES_IN=7d                           # Access token expiration
JWT_REFRESH_SECRET=CHANGE_ME_must_differ_from_jwt_secret_generate_with_openssl_rand_base64_64
JWT_REFRESH_EXPIRES_IN=30d                  # Refresh token expiration

# ==============================================================================
# MFA ENFORCEMENT
# ==============================================================================

MFA_REQUIRED_ROLES=ADMIN,VENDOR             # Roles requiring mandatory MFA (comma-separated: ADMIN, VENDOR, CUSTOMER, SUPPORT)
MFA_GRACE_PERIOD_DAYS=7                     # Days for new users to set up MFA
MFA_TRUSTED_DEVICE_DAYS=30                  # Days a device stays trusted before requiring MFA again
MFA_ENABLE_TRUSTED_DEVICES=true             # Set to false to require MFA on every login

# ==============================================================================
# SESSION MANAGEMENT
# ==============================================================================

MAX_CONCURRENT_SESSIONS=                    # Max concurrent sessions per user (default: internal limit)
MAX_MOBILE_SESSIONS=                        # Max mobile sessions per user
MAX_WEB_SESSIONS=                           # Max web sessions per user
SESSION_ENFORCEMENT_MODE=                   # Options: evict_oldest, deny_new (default: evict_oldest)
SESSION_IDLE_TIMEOUT_MINUTES=               # Minutes before idle sessions are terminated
NOTIFY_ON_NEW_SESSION=true                  # Notify user when a new session is created
NOTIFY_ON_EVICTION=true                     # Notify user when a session is evicted

# ==============================================================================
# ENCRYPTION
# ==============================================================================
#
# KYC document encryption (AES-256)
# MUST be exactly 64 hexadecimal characters (32 bytes)
# Generate with: openssl rand -hex 32
#
KYC_ENCRYPTION_KEY=CHANGE_ME_exactly_64_hex_chars_generate_with_openssl_rand_hex_32

# Banking information encryption (AES-256)
# MUST be exactly 32 bytes
# Generate with: openssl rand -hex 32
BANKING_ENCRYPTION_KEY=CHANGE_ME_exactly_32_bytes_generate_with_openssl_rand_hex_32

