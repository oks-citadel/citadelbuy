    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^8.0.5",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^5.1.1",
    "@paypal/paypal-server-sdk": "^2.0.0",
    "@prisma/client": "^5.7.1",
    "algoliasearch": "^5.44.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
