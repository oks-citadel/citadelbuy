{
  "name": "citadelbuy-backend",
  "version": "0.1.0",
  "description": "CitadelBuy backend API",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192 --localstorage-file=./test-storage.db\" jest --runInBand --testTimeout=30000 --forceExit",
    "test:watch": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192 --localstorage-file=./test-storage.db\" jest --watch",
    "test:cov": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192 --localstorage-file=./test-storage.db\" jest --coverage --runInBand --testTimeout=30000 --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest.js --runInBand",
    "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=8192\" jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:watch": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --coverage --runInBand --forceExit",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:categories": "ts-node prisma/seed-categories.ts",
    "db:seed:tiers": "ts-node prisma/seed-subscription-tiers.ts",
    "db:seed:prod": "ts-node prisma/seed.production.ts",
    "db:seed:organization": "ts-node prisma/seeds/organization.seed.ts",
    "migrate:organization": "ts-node scripts/migrate-organization.ts",
    "verify:organization": "ts-node scripts/verify-organization-migration.ts",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
