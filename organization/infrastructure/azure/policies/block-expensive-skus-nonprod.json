{
  "properties": {
    "displayName": "Broxiva - Block Expensive SKUs in Non-Production Environments",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Prevents creation of expensive SKUs in development and staging environments to control costs",
    "metadata": {
      "version": "1.0.0",
      "category": "Cost Management",
      "owner": "Broxiva FinOps Team"
    },
    "parameters": {
      "blockedVmSizes": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked VM Sizes",
          "description": "List of VM sizes that are too expensive for non-prod"
        },
        "defaultValue": [
          "Standard_E64s_v3",
          "Standard_E64_v3",
          "Standard_D64s_v3",
          "Standard_D64_v3",
          "Standard_M128s",
          "Standard_M64s",
          "Standard_L32s",
          "Standard_G5"
        ]
      },
      "blockedDatabaseTiers": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked Database Tiers",
          "description": "Database service tiers not allowed in non-prod"
        },
        "defaultValue": [
          "Premium",
          "BusinessCritical",
          "HyperScale"
        ]
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Compute/virtualMachines"
              },
              {
                "anyOf": [
                  {
                    "field": "tags['env']",
                    "in": [
                      "development",
                      "staging",
                      "dev",
                      "test",
                      "qa"
                    ]
                  },
                  {
                    "field": "tags['env']",
                    "exists": "false"
                  }
                ]
              },
              {
                "field": "Microsoft.Compute/virtualMachines/sku.name",
                "in": "[parameters('blockedVmSizes')]"
              }
            ]
          },
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Sql/servers/databases"
              },
              {
                "anyOf": [
                  {
                    "field": "tags['env']",
                    "in": [
                      "development",
                      "staging",
                      "dev",
                      "test",
                      "qa"
                    ]
                  },
                  {
                    "field": "tags['env']",
                    "exists": "false"
                  }
                ]
              },
              {
                "field": "Microsoft.Sql/servers/databases/sku.tier",
                "in": "[parameters('blockedDatabaseTiers')]"
              }
            ]
          },
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.ContainerService/managedClusters"
              },
              {
                "anyOf": [
                  {
                    "field": "tags['env']",
                    "in": [
                      "development",
                      "staging",
                      "dev",
                      "test",
                      "qa"
                    ]
                  },
                  {
                    "field": "tags['env']",
                    "exists": "false"
                  }
                ]
              },
              {
                "field": "Microsoft.ContainerService/managedClusters/agentPoolProfiles[*].vmSize",
                "in": "[parameters('blockedVmSizes')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}
