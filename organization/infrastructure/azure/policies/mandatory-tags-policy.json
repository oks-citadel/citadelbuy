{
  "properties": {
    "displayName": "Broxiva - Require Mandatory Tags on Resources",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Enforces mandatory tags (env, application, owner, costCenter, autoShutdown) on all resources for cost tracking and governance",
    "metadata": {
      "version": "1.0.0",
      "category": "Tags",
      "owner": "Broxiva FinOps Team"
    },
    "parameters": {
      "tagNames": {
        "type": "Array",
        "metadata": {
          "displayName": "Required Tag Names",
          "description": "List of required tag names"
        },
        "defaultValue": [
          "env",
          "application",
          "owner",
          "costCenter",
          "autoShutdown"
        ]
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "tags['env']",
            "exists": "false"
          },
          {
            "field": "tags['application']",
            "exists": "false"
          },
          {
            "field": "tags['owner']",
            "exists": "false"
          },
          {
            "field": "tags['costCenter']",
            "exists": "false"
          },
          {
            "field": "tags['autoShutdown']",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}
