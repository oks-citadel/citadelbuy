{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "defaultValue": "broxiva-auto-shutdown",
      "metadata": {
        "description": "Name of the Logic App"
      }
    },
    "automationAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Automation Account"
      }
    },
    "runbookName": {
      "type": "string",
      "defaultValue": "auto-shutdown-runbook",
      "metadata": {
        "description": "Name of the runbook to execute"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    }
  },
  "variables": {
    "automationConnectionName": "azureautomation"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('automationConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "Azure Automation Connection",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureautomation')]"
        },
        "parameterValues": {}
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "Weekday_Evening_Shutdown": {
              "recurrence": {
                "frequency": "Week",
                "interval": 1,
                "schedule": {
                  "hours": [
                    "19"
                  ],
                  "minutes": [
                    0
                  ],
                  "weekDays": [
                    "Monday",
                    "Tuesday",
                    "Wednesday",
                    "Thursday",
                    "Friday"
                  ]
                },
                "timeZone": "UTC"
              },
              "type": "Recurrence"
            }
          },
          "actions": {
            "Execute_Shutdown_Runbook": {
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['azureautomation']['connectionId']"
                  }
                },
                "method": "put",
                "path": "[concat('/subscriptions/@{encodeURIComponent(''', subscription().subscriptionId, ''')}/resourceGroups/@{encodeURIComponent(''', resourceGroup().name, ''')}/providers/Microsoft.Automation/automationAccounts/@{encodeURIComponent(''', parameters('automationAccountName'), ''')}/jobs')]",
                "queries": {
                  "runbookName": "[parameters('runbookName')]",
                  "wait": false,
                  "x-ms-api-version": "2015-10-31"
                },
                "body": {
                  "properties": {
                    "parameters": {
                      "Environment": "development,staging",
                      "Action": "shutdown",
                      "DryRun": false
                    }
                  }
                }
              },
              "runAfter": {}
            },
            "Send_Notification": {
              "type": "Http",
              "inputs": {
                "method": "POST",
                "uri": "https://hooks.slack.com/services/YOUR_WEBHOOK_URL",
                "body": {
                  "text": "Auto-shutdown executed for non-production environments",
                  "timestamp": "@{utcNow()}"
                }
              },
              "runAfter": {
                "Execute_Shutdown_Runbook": [
                  "Succeeded"
                ]
              }
            }
          }
        },
        "parameters": {
          "$connections": {
            "value": {
              "azureautomation": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]",
                "connectionName": "[variables('automationConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureautomation')]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[concat(parameters('logicAppName'), '-weekend-shutdown')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "Friday_Evening_Shutdown": {
              "recurrence": {
                "frequency": "Week",
                "interval": 1,
                "schedule": {
                  "hours": [
                    "19"
                  ],
                  "minutes": [
                    0
                  ],
                  "weekDays": [
                    "Friday"
                  ]
                },
                "timeZone": "UTC"
              },
              "type": "Recurrence"
            }
          },
          "actions": {
            "Execute_Weekend_Shutdown": {
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['azureautomation']['connectionId']"
                  }
                },
                "method": "put",
                "path": "[concat('/subscriptions/@{encodeURIComponent(''', subscription().subscriptionId, ''')}/resourceGroups/@{encodeURIComponent(''', resourceGroup().name, ''')}/providers/Microsoft.Automation/automationAccounts/@{encodeURIComponent(''', parameters('automationAccountName'), ''')}/jobs')]",
                "queries": {
                  "runbookName": "[parameters('runbookName')]",
                  "wait": false,
                  "x-ms-api-version": "2015-10-31"
                },
                "body": {
                  "properties": {
                    "parameters": {
                      "Environment": "development,staging",
                      "Action": "shutdown",
                      "DryRun": false
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": {
          "$connections": {
            "value": {
              "azureautomation": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]",
                "connectionName": "[variables('automationConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureautomation')]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[concat(parameters('logicAppName'), '-monday-startup')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "Monday_Morning_Startup": {
              "recurrence": {
                "frequency": "Week",
                "interval": 1,
                "schedule": {
                  "hours": [
                    "7"
                  ],
                  "minutes": [
                    0
                  ],
                  "weekDays": [
                    "Monday"
                  ]
                },
                "timeZone": "UTC"
              },
              "type": "Recurrence"
            }
          },
          "actions": {
            "Execute_Startup_Runbook": {
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['azureautomation']['connectionId']"
                  }
                },
                "method": "put",
                "path": "[concat('/subscriptions/@{encodeURIComponent(''', subscription().subscriptionId, ''')}/resourceGroups/@{encodeURIComponent(''', resourceGroup().name, ''')}/providers/Microsoft.Automation/automationAccounts/@{encodeURIComponent(''', parameters('automationAccountName'), ''')}/jobs')]",
                "queries": {
                  "runbookName": "[parameters('runbookName')]",
                  "wait": false,
                  "x-ms-api-version": "2015-10-31"
                },
                "body": {
                  "properties": {
                    "parameters": {
                      "Environment": "development,staging",
                      "Action": "start",
                      "DryRun": false
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": {
          "$connections": {
            "value": {
              "azureautomation": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('automationConnectionName'))]",
                "connectionName": "[variables('automationConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureautomation')]"
              }
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "logicAppId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Logic/workflows', parameters('logicAppName'))]"
    }
  }
}
