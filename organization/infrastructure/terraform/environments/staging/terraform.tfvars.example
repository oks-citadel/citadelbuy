# Staging Environment Variables Example
# Copy this file to terraform.tfvars and fill in the values

# Azure Credentials (get from Azure Portal or az account show)
subscription_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
tenant_id       = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Database Configuration
db_admin_username = "broxiva_admin"
db_admin_password = "CHANGE_ME_STAGING_PASSWORD"

# AKS Admin Group (Azure AD Group Object IDs)
aks_admin_group_ids = [
  "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"  # Dev Team Group
]

# Security Configuration
allowed_ip_ranges = [
  # Office IP ranges
  # Development IPs
]

# JWT Secret (use a strong random string)
jwt_secret = "CHANGE_ME_STAGING_JWT_SECRET"

# Monitoring Configuration
oncall_email = "dev-team@broxiva.com"
team_email   = "platform-team@broxiva.com"

# Slack Integration (optional)
slack_webhook_url = ""
