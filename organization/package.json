{
  "name": "citadelbuy-platform",
  "version": "2.0.0",
  "private": true,
  "description": "CitadelBuy - AI-Powered E-Commerce Platform with 300+ AI Capabilities",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@citadelbuy/web",
    "dev:api": "turbo run dev --filter=@citadelbuy/api",
    "dev:admin": "turbo run dev --filter=@citadelbuy/admin",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@citadelbuy/web",
    "build:api": "turbo run build --filter=@citadelbuy/api",
    "build:packages": "turbo run build --filter=./packages/*",
    "test": "turbo run test",
    "test:web": "turbo run test --filter=@citadelbuy/web",
    "test:api": "turbo run test --filter=@citadelbuy/api",
    "test:e2e": "turbo run test:e2e",
    "test:visual": "npm run test:visual --workspace=apps/web",
    "test:a11y": "npm run test:a11y --workspace=apps/web",
    "test:load": "artillery run tests/load/scenarios/*.yml",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:ai": "docker-compose -f infrastructure/docker/docker-compose.ai.yml up -d",
    "db:migrate": "npm run migrate --workspace=apps/api",
    "db:migrate:deploy": "npm run migrate:deploy --workspace=apps/api",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "db:push": "npm run db:push --workspace=apps/api",
    "prisma:generate": "npm run prisma:generate --workspace=apps/api",
    "prisma:studio": "npm run prisma:studio --workspace=apps/api",
    "infra:plan": "cd infrastructure/terraform/environments/prod && terraform plan",
    "infra:apply": "cd infrastructure/terraform/environments/prod && terraform apply",
    "infra:destroy": "cd infrastructure/terraform/environments/prod && terraform destroy",
    "k8s:deploy": "kubectl apply -k infrastructure/kubernetes/overlays/production",
    "helm:install": "helm install citadelbuy infrastructure/helm/citadelbuy -f infrastructure/helm/values/production.yaml",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "artillery": "^2.0.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.23.0"
}
