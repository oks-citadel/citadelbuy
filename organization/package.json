{
  "name": "broxiva-platform",
  "version": "2.0.0",
  "private": true,
  "description": "Broxiva - AI-Powered Premium Global E-Commerce Platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@broxiva/web",
    "dev:api": "turbo run dev --filter=broxiva-backend",
    "dev:admin": "turbo run dev --filter=@broxiva/admin",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@broxiva/web",
    "build:api": "turbo run build --filter=broxiva-backend",
    "build:packages": "turbo run build --filter=./packages/*",
    "test": "turbo run test",
    "test:web": "turbo run test --filter=@broxiva/web",
    "test:api": "turbo run test --filter=broxiva-backend",
    "test:e2e": "turbo run test:e2e",
    "test:visual": "pnpm run test:visual --filter=apps/web",
    "test:a11y": "pnpm run test:a11y --filter=apps/web",
    "test:load": "artillery run tests/load/scenarios/*.yml",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:ai": "docker-compose -f infrastructure/docker/docker-compose.ai.yml up -d",
    "db:migrate": "pnpm run migrate --filter=apps/api",
    "db:migrate:deploy": "pnpm run migrate:deploy --filter=apps/api",
    "db:seed": "pnpm run db:seed --filter=apps/api",
    "db:push": "pnpm run db:push --filter=apps/api",
    "prisma:generate": "pnpm run prisma:generate --filter=apps/api",
    "prisma:studio": "pnpm run prisma:studio --filter=apps/api",
    "infra:plan": "cd infrastructure/terraform/environments/prod && terraform plan",
    "infra:apply": "cd infrastructure/terraform/environments/prod && terraform apply",
    "infra:destroy": "cd infrastructure/terraform/environments/prod && terraform destroy",
    "k8s:deploy": "kubectl apply -k infrastructure/kubernetes/overlays/production",
    "helm:install": "helm install broxiva infrastructure/helm/broxiva -f infrastructure/helm/values/production.yaml",
    "prepare": "husky install",
    "audit": "pnpm audit --audit-level=high",
    "audit:fix": "pnpm audit --fix",
    "deps:check": "bash scripts/check-deps.sh",
    "deps:outdated": "pnpm outdated"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "artillery": "^2.0.18",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1",
      "glob": "^11.0.0",
      "jws": "^4.0.1",
      "nodemailer": ">=7.0.11",
      "semver": "^7.5.4",
      "ip": "^2.0.1",
      "html-minifier": "npm:html-minifier-terser@^7.2.0",
      "@sentry/react-native@>=5.16.0 <=5.19.0": ">=5.19.1",
      "@sentry/browser@<7.119.1": ">=7.119.1",
      "esbuild@<=0.24.2": ">=0.25.0",
      "cookie@<0.7.0": ">=0.7.0",
      "webpack-dev-server@<=5.2.0": ">=5.2.1",
      "tmp@<=0.2.3": ">=0.2.4",
      "send@<0.19.0": ">=0.19.0",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
      "qs": ">=6.14.1",
      "test-exclude": ">=7.0.1"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@playwright/browser-chromium",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@sentry-internal/node-cpu-profiler",
      "@sentry/cli",
      "aws-sdk",
      "bcrypt",
      "esbuild",
      "msgpackr-extract",
      "prisma",
      "protobufjs",
      "sharp",
      "unix-dgram",
      "unrs-resolver"
    ]
  }
}
