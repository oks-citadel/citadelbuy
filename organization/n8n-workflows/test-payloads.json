  "test_scenarios": {
    "scenario_1_standard_flow": {
      "description": "Standard order processing - should route to standard queue",
      "payload": "standard_order",
      "expected_queue": "standard",
      "expected_priority": "normal",
      "expected_channels": ["#fulfillment"]
    },
    "scenario_2_high_value": {
      "description": "High-value order - should trigger priority queue and alert",
      "payload": "high_value_order",
      "expected_queue": "priority",
      "expected_priority": "high",
      "expected_channels": ["#fulfillment", "#priority-orders"]
    },
    "scenario_3_vip_gold": {
      "description": "VIP Gold customer - should route to VIP queue",
      "payload": "vip_gold_order",
      "expected_queue": "vip",
      "expected_priority": "high",
      "expected_channels": ["#fulfillment", "#priority-orders"]
    },
    "scenario_4_vip_platinum_express": {
      "description": "VIP Platinum with Express shipping - highest priority",
      "payload": "vip_platinum_express",
      "expected_queue": "expedited",
      "expected_priority": "urgent",
      "expected_channels": ["#fulfillment", "#priority-orders"],
      "expected_sla_hours": 4
    },
    "scenario_5_international": {
      "description": "International order - should trigger international alert",
      "payload": "international_order",
      "expected_queue": "standard",
      "expected_priority": "normal",
      "expected_channels": ["#fulfillment", "#international-fulfillment"]
    },
    "scenario_6_international_vip_express": {
      "description": "International VIP with Express - multiple alerts",
      "payload": "international_vip_express",
      "expected_queue": "expedited",
      "expected_priority": "urgent",
      "expected_channels": ["#fulfillment", "#priority-orders", "#international-fulfillment"]
    },
    "scenario_7_invalid_data": {
      "description": "Invalid order data - should return 400 error",
      "payload": "invalid_order_missing_fields",
      "expected_response_code": 400,
      "expected_validation_errors": true
    },
    "scenario_8_edge_case": {
      "description": "Edge case with zero total - should still process",
      "payload": "edge_case_zero_total",
      "expected_queue": "standard",
      "expected_priority": "normal",
      "expected_validation_errors": true
    }
  }
