# CitadelBuy n8n Workflows - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here  # Optional

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=citadelbuy-products

# CitadelBuy API
CITADELBUY_API_KEY=your-citadelbuy-api-key-here
CITADELBUY_API_URL=https://api.citadelbuy.com/v1

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=citadelbuy
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your-postgres-password-here

# Zendesk Configuration
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_EMAIL=admin@citadelbuy.com
ZENDESK_API_TOKEN=your-zendesk-api-token-here

# Twilio Configuration (WhatsApp)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxyz

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=support@citadelbuy.com

# ShipStation API
SHIPSTATION_API_KEY=your-shipstation-api-key-here
SHIPSTATION_API_SECRET=your-shipstation-api-secret-here

# n8n Configuration
N8N_BASE_URL=https://your-n8n-instance.com
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Optional: Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
