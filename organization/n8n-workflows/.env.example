# Broxiva n8n Workflows - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here  # Optional

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=broxiva-products

# Broxiva API
BROXIVA_API_KEY=your-broxiva-api-key-here
BROXIVA_API_URL=https://api.broxiva.com/v1

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=broxiva
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your-postgres-password-here

# Zendesk Configuration
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_EMAIL=admin@broxiva.com
ZENDESK_API_TOKEN=your-zendesk-api-token-here

# AWS SNS Configuration (SMS - replaces Twilio)
# NOTE: Twilio is NOT supported. Use AWS SNS for SMS/notifications.
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_SNS_REGION=us-east-1
AWS_SNS_SENDER_ID=Broxiva

# Telegram Bot (supported - not an external paid messaging service)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxyz

# AWS SES Configuration (Email - replaces SendGrid)
# NOTE: SendGrid is NOT supported. Use AWS SES for email delivery.
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=support@broxiva.com
AWS_SES_FROM_NAME=Broxiva

# ShipStation API
SHIPSTATION_API_KEY=your-shipstation-api-key-here
SHIPSTATION_API_SECRET=your-shipstation-api-secret-here

# n8n Configuration
N8N_BASE_URL=https://your-n8n-instance.com
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Optional: Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
