#!/bin/bash

# Enterprise E-Commerce Platform - Directory Structure Setup
# This script creates the complete project structure

echo "Creating Enterprise E-Commerce Platform Structure..."

# Root directories
mkdir -p src/{frontend,backend}
mkdir -p infrastructure/{docker,kubernetes,terraform}
mkdir -p docs/{architecture,api,deployment}
mkdir -p scripts/{deployment,migration,backup}
mkdir -p tests/{unit,integration,e2e}
mkdir -p config/{development,staging,production}

# Frontend structure
mkdir -p src/frontend/{public,src}
mkdir -p src/frontend/src/{components,pages,services,utils,hooks,context,store,assets,locales,types}
mkdir -p src/frontend/src/components/{common,layout,auth,product,cart,checkout,user,admin,ai}
mkdir -p src/frontend/src/pages/{home,products,cart,checkout,profile,admin,search}
mkdir -p src/frontend/src/services/{api,auth,payment,translation,analytics,ai}

# Backend structure
mkdir -p src/backend/{api,core,services,models,middleware,utils,migrations,seeds}
mkdir -p src/backend/api/{v1,v2}
mkdir -p src/backend/services/{auth,payment,inventory,shipping,email,sms,ai,translation,analytics}
mkdir -p src/backend/models/{user,product,order,payment,shipping,vendor,review}
mkdir -p src/backend/middleware/{auth,validation,ratelimit,cors,security}

# AI Services structure
mkdir -p src/backend/services/ai/{nlp,visual-search,chatbot,pricing,inventory,content,fraud,analytics}

# Database structure
mkdir -p database/{postgres,redis,mongodb,elasticsearch}
mkdir -p database/postgres/{schemas,migrations,seeds}

# Infrastructure
mkdir -p infrastructure/docker/{frontend,backend,database,monitoring,proxy}
mkdir -p infrastructure/kubernetes/{deployments,services,ingress,configmaps,secrets}
mkdir -p infrastructure/terraform/{aws,gcp,azure}

# Monitoring and logging
mkdir -p monitoring/{prometheus,grafana,elk}

# Third-party integrations
mkdir -p integrations/{payment,shipping,translation,analytics,crm,marketing}

# Documentation
mkdir -p docs/{architecture,api,deployment,operations,security,compliance}

echo "âœ“ Directory structure created successfully!"
echo "Total directories created: $(find . -type d | wc -l)"
